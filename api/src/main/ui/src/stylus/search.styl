search
    .keyword
        margin 10px 5px
        box-shadow 0 0 8px 3px rgba(0,0,0,0.3)
        border-radius 8px
    .location
        margin 20px 5px
        border 0
        box-shadow 0 0 8px 3px rgba(0,0,0,0.3)
        .panel-body
            input
                width 100px
                &.inline
                    display inline-block
        .panel-footer
            text-align center
        .panel-heading
            border 0
            padding 5px
            &.selected
                color #fff
                background-color #333
        .location-body-cnt
            height 135px
            -webkit-transition height 1s linear, opacity 2s linear
            -moz-transition height 1s linear, opacity 2s linear
            transition height 1s linear, opacity 2s linear
            &.minimized
                height 0px
                opacity 0

