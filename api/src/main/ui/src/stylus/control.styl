control-panel
    text-align center
    background-color #333
    .control-cnt
        margin-top 5px
        button
            width 30px
            border-radius 4px
            padding 0
            font-size 20px
            &:hover
                i
                    text-shadow 0 0 3px blue
                    -webkit-transition all .2s linear
                    -moz-transition all .2s linear
                    transition all .2s linear
